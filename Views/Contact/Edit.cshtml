@model ContactModel
@{
    ViewData["Title"] = "Edit";
}
<div class="text-center">
    <h1 class="display-4">Edit Contact</h1>
</div>

<form asp-controller="Contact" asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />
    <div class="mb-3">
        <label for="name">Name</label>
        <input type="text" asp-for="Name" class="form-control" placeholder="Enter name">
        @Html.ValidationMessageFor(x => x.Name)
    </div>
    <div class="mb-3">
        <label for="email" class="form-label">Email address</label>
        <input type="email" asp-for="Email" class="form-control" id="email" aria-describedby="emailHelp" placeholder="Enter email">
        @Html.ValidationMessageFor(x => x.Email)
        <div id="emailHelp" class="form-text">We'll never share your email with anyone else.</div>
    </div>
    <div class="mb-3">
        <label for="phone">Phone</label>
        <input type="text" asp-for="Phone" class="form-control" placeholder="Enter phone">
        @Html.ValidationMessageFor(x => x.Phone)
    </div>
    <div class="d-flex justify-content-end gap-2">
        <button type="submit" class="btn btn-primary">Save</button>
        <a class="btn btn-secondary" asp-controller="Contact" asp-action="Index" role="button">Back</a>
    </div>
</form>
