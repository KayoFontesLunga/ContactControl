@model ContactModel
@{
    ViewData["Title"] = "Delete";
}
<div class="text-center">
    <h3>Are you sure you want to delete this contact (@Model.Name)?</h3>
</div>
<br />
<div class="d-flex justify-content-center gap-2">
    <a class="btn btn-primary" role="button" asp-controller="contact" asp-action="Index">Cancel</a>
    <a class="btn btn-primary" role="button" asp-controller="contact" asp-route-id="@Model.Id" asp-action="Delete">Delete</a>
</div>