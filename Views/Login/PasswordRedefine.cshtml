@model PasswordRedefineModel
@{
    Layout = "_OfflineLayout";
    ViewData["Title"] = "Password Redefine";
}
@if (TempData["error"] != null)
{
    <div class="alert alert-danger" role="alert">
        <button type="button" class="btn-danger btn-sm close-alert" data-bs-dismiss="alert" aria-label="Close">X</button>
        @TempData["error"]
    </div>
}
<form asp-controller="Login" asp-action="EnterPasswordRedefine">
    <div class="mb-3">
        <label for="login" class="form-label">Email address</label>
        <input type="email" asp-for="Email" class="form-control" id="login" aria-describedby="emailHelp">
        @Html.ValidationMessageFor(x => x.Email)
    </div>
    <button type="submit" class="btn btn-primary">Password Redefine</button>
    <a class="btn btn-secondary" asp-controller="Login" asp-action="Index" role="button">Back</a>
</form>